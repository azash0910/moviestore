@model IEnumerable<MovieStore.Models.MovieModel>

@{
    ViewBag.Title = "Index";
    string Order = "desc";
    if (ViewBag.Order == "desc") { Order = "asc";  }
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <a href="?sort=title_@Html.Encode(Order)">
                @Html.DisplayNameFor(model => model.Titel)
            </a>
        </th>
        <th>
            <a href="?sort=length_@Html.Encode(Order)">
                @Html.DisplayNameFor(model => model.Length)
            </a>
        </th>
        <th>
            <a href="?sort=genre_@Html.Encode(Order)">
                @Html.DisplayNameFor(model => model.Genre)
            </a>
        </th>
        <th>
            <a href="?sort=year_@Html.Encode(Order)">
                @Html.DisplayNameFor(model => model.Year)
            </a>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Length)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
