@model IEnumerable<MovieStore.Models.RentMovieViewModel>

@{
    ViewBag.Title = "Hyr film";
}

<h2>Hyr film</h2>

<p>
    @Html.ActionLink("Hyr ut en ny film", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Film
        </th>
        <th>
            Uthyrd till
        </th>
        <th>
            Datum för uthyrning
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MovieName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Convert.ToDateTime(item.RentDate).ToString("yyyy-MM-dd")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Redigera", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detaljer", "Details", new { id=item.Id }) |
            @Html.ActionLink("Radera", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
